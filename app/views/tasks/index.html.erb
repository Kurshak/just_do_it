<p id="notice"><%= notice %></p>
<h1 class = "top">Tasks</h1>
  <tbody >
    <% @tasks.each do |task| %>
      <% if task.complited == true %>
        <span class = "task comleted_true">   <%= render task %> </span>
        <% else if task.time < Time.zone.now %>
          <span class = "task comleted_false">  <%= render task %> </span>
          <%else %>  
            <span class = "task">  <%= render task %> </span>
        <% end %>
      <% end %>
  </tbody>
  <% end %>
</table>


<br>

<%= link_to 'New Task', new_task_path , class: 'btn btn-primary'%>  
